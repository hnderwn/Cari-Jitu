{
  "name": "cari-jitu!",
  "version": "1.0.0",
  "main": "script.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css",
    "copy:assets": "copyfiles ./*.html ./*.js ./dist",
    "copy:vendor": "copyfiles -f \"./node_modules/@yaireo/tagify/dist/tagify.css\" -f \"./node_modules/@yaireo/tagify/dist/tagify.esm.js\" ./dist",
    "build": "npm run copy:assets && npm run copy:vendor && npm run build:css",
    "watch:css": "npm run build:css -- --watch",
    "watch:assets": "onchange \"./*.html\" \"./*.js\" -- npm run copy:assets",
    "serve": "live-server dist",
    "dev": "npm run build && concurrently \"npm:watch:*\" \"npm:serve\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@yaireo/tagify": "^4.35.3",
    "copyfiles": "^2.4.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "onchange": "^7.1.0"
  }
}
